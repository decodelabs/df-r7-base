{
    "name": "df-r7/base",
    "description": "DF r7 base",
    "type": "library",
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^8.0",
        "symfony/polyfill-mbstring": "~1.7",

        "decodelabs/archetype": "^0.2.9",
        "decodelabs/atlas": "^0.10",
        "decodelabs/coercion": "^0.2",
        "decodelabs/collections": "^0.8",
        "decodelabs/compass": "^0.1.2",
        "decodelabs/deliverance": "^0.2.7",
        "decodelabs/dictum": "^0.4",
        "decodelabs/disciple": "^0.3.3",
        "decodelabs/elementary": "^0.2",
        "decodelabs/eventful": "^0.3",
        "decodelabs/exceptional": "^0.4",
        "decodelabs/exemplar": "^0.3.4",
        "decodelabs/fluidity": "^0.3.3",
        "decodelabs/genesis": "^0.6.1",
        "decodelabs/glitch": "^0.18.2",
        "decodelabs/idiom": "^0.2",
        "decodelabs/lucid": "^0.3",
        "decodelabs/metamorph": "^0.5",
        "decodelabs/pandora": "^0.2.4",
        "decodelabs/sanctum": "^0.1",
        "decodelabs/spectrum": "^0.2",
        "decodelabs/systemic": "^0.9.6",
        "decodelabs/tagged": "^0.14.5",
        "decodelabs/terminus": "^0.9",
        "decodelabs/tightrope": "^0.1",
        "decodelabs/typify": "^0.2",
        "decodelabs/veneer": "^0.10.11",

        "guzzlehttp/guzzle": "^7.2",
        "erusev/parsedown": "^1.7",
        "nesbot/carbon": "^2.26"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "1.8.x-dev",
        "phpstan/extension-installer": "^1.0",

        "decodelabs/phpstan-decodelabs": "^0.6",
        "decodelabs/chirp": "^0.8",

        "auth0/auth0-php": "^7.6",
        "stripe/stripe-php": "^6.38",
        "xenolope/quahog": "^3"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\": "provider/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DecodeLabs\\PHPStan\\": "phpstan/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "analyze": "phpstan analyze",
        "analyze-provider": "phpstan analyze --configuration=phpstan.provider.neon",
        "clear-phpstan": "phpstan clear-result-cache",
        "veneer-stub": "php tests/veneer-stub.php",
        "prep": [
            "@composer update",
            "@veneer-stub",
            "@clear-phpstan",
            "@analyze",
            "@analyze-provider"
        ]
    }
}
