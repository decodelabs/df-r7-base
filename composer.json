{
    "name": "df-r7/base",
    "description": "DF r7 base",
    "type": "library",
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^8.0",
        "symfony/polyfill-mbstring": "~1.7",

        "decodelabs/atlas": "^0.10",
        "decodelabs/coercion": "^0.2",
        "decodelabs/collections": "^0.7",
        "decodelabs/deliverance": "^0.2",
        "decodelabs/dictum": "^0.4",
        "decodelabs/disciple": "^0.3",
        "decodelabs/elementary": "^0.2",
        "decodelabs/eventful": "^0.3",
        "decodelabs/exceptional": "^0.4",
        "decodelabs/exemplar": "^0.3",
        "decodelabs/gadgets": "^0.9",
        "decodelabs/glitch": "^0.18",
        "decodelabs/idiom": "^0.2",
        "decodelabs/metamorph": "^0.5",
        "decodelabs/sanctum": "^0.1",
        "decodelabs/spectrum": "^0.2",
        "decodelabs/systemic": "^0.9",
        "decodelabs/tagged": "^0.14",
        "decodelabs/terminus": "^0.8",
        "decodelabs/typify": "^0.2",
        "decodelabs/veneer": "^0.9",

        "guzzlehttp/guzzle": "^7.2",
        "erusev/parsedown": "^1.7",
        "nesbot/carbon": "^2.26"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "1.8.x-dev",
        "phpstan/extension-installer": "^1.0",

        "decodelabs/phpstan-decodelabs": "^0.6",
        "decodelabs/chirp": "^0.8",

        "auth0/auth0-php": "^7.6",
        "stripe/stripe-php": "^6.38",
        "xenolope/quahog": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\R7\\": "provider/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DecodeLabs\\PHPStan\\": "phpstan/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "analyze": "phpstan analyze",
        "clear-phpstan": "phpstan clear-result-cache"
    }
}
